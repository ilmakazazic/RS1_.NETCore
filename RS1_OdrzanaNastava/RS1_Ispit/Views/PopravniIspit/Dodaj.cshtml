@model DodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj</h2>
<form  method="post">
    <div class="form-group">
        <label>Predmet: </label>
        <input asp-for="Predmet" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label>Razred: </label>
        <input asp-for="Razred" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label>Datum: </label>
        <input type="date" asp-for="DatumIspita" class="form-control" />
    </div>


    <div class="form-group">
        <label>Skola: </label>
        <select asp-for="SkolaId" asp-items="@Model.Skole" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Skolska godina: </label>
        <select asp-for="SkolskaGodinaId" asp-items="@Model.SkolskeGodine" class="form-control"></select>
    </div>

    <button type="submit">Snimi</button>
</form>